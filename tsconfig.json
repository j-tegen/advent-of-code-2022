{
    "compilerOptions": {
      "lib": ["es5", "es6", "es2016", "esnext.asynciterable", "dom"],
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "sourceMap": true,
      "typeRoots": [
          "node_modules/@types",
      ]
    },
    "paths": {
      "@/*": ["*"]
    }
  }
  